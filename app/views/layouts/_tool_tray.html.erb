<% if @search.present? %>
<div id="tool-tray" class="<%= 'hidden' unless @search.present? %> hidden-print">
      <div class="bd-toc-item active">
        <ul class="nav bd-sidenav">
          <li class=""><pre><%= params[:q] %></pre></li>
          <hr/>
          <li class="">
            <%= link_to "Scientific",
                        plants_names_search_scientific_path(q: params["q"], nt: "s"),
                        class: "tiny needs-details-limit",
                        title: "Run the currently displayed search again for scientific names.  Open the scientific search page if no currently displayed search." %>
          </li>
          <li class="">
            <%= link_to "Cultivar",
                        plants_names_search_cultivar_path(q: params['q'], nt: "v"),
                        class: "tiny needs-details-limit",
                        title: "Run the currently displayed search again for cultivar names.  Open the Cultivar search page if no currently displayed search." %>
          </li>
          <li class="">
            <%= link_to "Common",
                        plants_names_search_common_path(q: params['q'], nt: 'c'),
                        class: "tiny needs-details-limit",
                        title: "Run the currently displayed search again for common names.  Open the Common Name search page if no currently displayed search." %>
          </li>
          <li class="">
            <%= link_to "All",
                        plants_names_search_all_path(q: params['q']),
                        class: "tiny needs-details-limit",
                        title: "Run the currently displayed search again for all names.  Open the search page for all names if no currently displayed search." %>
          </li>
          <hr/>
          <li class="">
            <%= link_to %(List &nbsp; #{fa_icon('check') if @search.parsed.show_list?}).html_safe,
                        plants_names_search_path(q: params['q'], pc: params[:controller], show_results_as: 'list'),
                        class: "tiny needs-details-limit",
                        title: "Re-run the search as a list." %>
          </li>
          <li class="">
            <%= link_to %(Details &nbsp; #{fa_icon('check') if @search.parsed.show_details?}).html_safe,
                        plants_names_search_path(q: params['q'], pc: params[:controller], show_results_as: 'details'),
                        class: "tiny needs-details-limit",
                        title: "Re-run the search showing details." %>
            <input type="number"
                   min="1"
                   max="1000"
                   step="1"
                   value="<%= session[:default_details_limit] %>"
                   name="tool-tray-details-limit"
                   id="details-limit-field"
                   class="">
          </li>
          <hr/>
          <li>
            <a href="javascript:window.print()"
               class="tiny"
               title="Print the page">Print</a>
          </li>
          <hr/>
          <li>
            <a href="javascript:void(0)"
               class="tiny nav-new-search"
               title="Go to the search field and clear it">New Search</a>
          </li>
          <hr/>
          <li class="gray tiny">
            Navigate: 
            <a href="javascript:history.go(-1);"
               class="tiny"
               title="Go back one page"><%= fa_stacked_icon "chevron-left inverse", base: "square" %></a>&nbsp; 
            <a href="#top"
               class="tiny"
               title="Go to the top of the page"><%= fa_stacked_icon "chevron-up inverse", base: "square" %></a>&nbsp; 
            <a href="#footer"
               class="tiny"
               title="Go to the bottom of the page"><%= fa_stacked_icon "chevron-down inverse", base: "square" %></a>&nbsp; 
            <a href="javascript:history.go(1);"
               class="tiny"
               title="Go forward one page"><%= fa_stacked_icon "chevron-right inverse", base: "square" %></a>
          </li>
        </ul>
  </div>
</div>
<% end %>

