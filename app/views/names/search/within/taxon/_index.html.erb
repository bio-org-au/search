<ul>
<% Plants::Names::Search::Within::RankedDescendantCounts.new(name.id).each do |d| %>
  <% target_id = new_target_id %>
  <li/><%= link_to("#{d['rank']}: #{d['count']}",
                   plants_names_search_within_taxon_at_rank_path(
                     name.id,
                     d["rank"].gsub(/\./,'DOT'),
                     target_id: target_id),
                   class: "drill-down-toggle no-details",
                   data: {target_id: target_id},
                   remote: true) %>
   <div id="<%= target_id %>" class="drill-down hidden-xs-up"></div>
<% end %>
</ul>
