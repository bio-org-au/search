<% if @search.present? %>
<div id="search-tools-slider" class="<%= 'hidden' unless @search.present? %> hidden-print">
      <div class="bd-toc-item active">
        <hr/>
        <ul class="nav bd-sidenav">
          <li>
            <a href="#"
               id="retrieve-details-control"
               class="tiny retrieve-details-control control"
               title="Retrieve details, 100 at a time">Retrieve <span id="more-details-text" class="hidden-xs-up"> more</span> details
               <span id="details-retrieved-count"></span>
            </a>
          </li>
          <li>
            <% if params[:retrieve_details_on_load].present? && params[:retrieve_details_on_load].match(/true/) %>
              <a href="#"
                 id="always-retrieve-details-toggle"
                 class="tiny always-show-hide-all-toggle"
                 title="Set a flag to retrieve details when records are queried.">Always retrieve details &nbsp; <%= fa_icon('check') %></a>
            <% else %>
              <a href="#"
                 id="always-retrieve-details-toggle"
                 class="tiny always-retrieve-details-toggle"
                 title="Always retrieve details after records are queried.  Up to 100.">Always retrieve details</a>
            <% end %>
          </li>
          <li>
              <a href="#"
                 id="collapse-details-control"
                 class="tiny collapse-details-control control hidden-xs-up"
                 title="Collapse retrieved details">Collapse details</a>
          </li>
          <li>
              <a href="#"
                 id="expand-details-control"
                 class="tiny expand-details-control control hidden-xs-up"
                 title="Expand retrieved details">Expand details</a>
          </li>
          <hr/>
          <li>
            <a href="javascript:window.print()"
               class="tiny"
               title="Print the page">Print</a>
          </li>

          <% if @search.parsed.show_list? %>
            <li class="">
              <%= link_to "JSON",
                          plants_names_search_scientific_path(q: params['q'], pc: params[:controller], show_results_as: 'list', format: :json),
                          class: "tiny needs-details-limit",
                          title: "Convert results to JSON." %>
            </li>
            <li class="">
              <%= link_to "CSV",
                          plants_names_search_scientific_path(q: params['q'], pc: params[:controller], show_results_as: 'list', format: :csv),
                          class: "tiny needs-details-limit",
                          title: "Convert results to CSV." %>
            </li>
          <% end %>

        </ul>
        <%= render partial: "/layouts/search_nav_links" %>
  </div>
</div>
<% end %>
