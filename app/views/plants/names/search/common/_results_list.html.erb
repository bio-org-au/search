



<% if @search.results.size > 0 %>
  <ul class="name-results">
    <% @search.results.each_with_index do |name, ndx| %>
      <li>
        <% if @search.parsed.show_details? &&
          ndx < session[:default_details_limit] %>
          <%= render partial: 'details', locals: {name: name} %>
          <br/>
        <% else %>
          <% target_id = new_target_id %>
          <hr class="<%= target_id %> divider hidden-xs-up" />
          <br class="<%=target_id%> details hidden-xs-up"/>
          <span class="result-item-heading">
            <%= link_to("#{name[:full_name].sub(/^x /, "Ã— ")}",
                        plants_names_show_path(name[:id],target_id: target_id),
                        class: "name-heading full-name drill-down-toggle no-details",
                        data: {target_id: target_id},
                        title: "Select to show or hide details",
                        remote: true)
            %>
          </span>
          <div id="<%= target_id %>" class="details hidden-xs-up"></div>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

