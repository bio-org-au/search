<%= form_tag(plants_names_search_common_path, method: "get") do %>
  <div class="form-group row">
    <%= label_tag(:q,
                  "Search for:",
                  class:"sr-only col-sm-2 form-control-label") %>
  <div class="col-sm-10">
    <%= text_field_tag(:q,
                       '',
                       class: "form-control",
                       value: "#{params[:q]}",
                       placeholder: "Search common and informal names") %>
    </div>
  <%= submit_tag("Search", class: "btn btn-search hidden-print") %>
  </div>
<% end %>

<% if @search.present? %>
  <%= "<span class='search-result-summary'>#{pluralize(@search.results.size, 'common or informal name')}</span>".html_safe %>
<% end %>
<br/>
<br/>

<% if @search.present? %>
  <%= render partial: '/plants/names/search/results', locals: {name: @search.results.first} %>
<% end %>
<span class="debug hidden-print">[plants/names/search/common]</span>
