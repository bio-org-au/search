<%= form_tag(plant_names_search_search_path, method: "get") do %>
  <div class="form-group row">
    <%= label_tag(:q,
                  "Search for:",
                  class:"sr-only col-sm-2 form-control-label") %>
  <div class="col-sm-10">
    <%= text_field_tag(:q,
                       '',
                       class: "form-control",
                       value: "#{params[:q]}",
                       placeholder: "Search terms") %>
    </div>
  <%= submit_tag("Search", class: "btn btn-search") %>
  </div>
<% end %>

<% if @search.present? %>
  <%= "#{@search.parsed.search_type} for '#{params[:q]}' returned
  #{pluralize(@search.results.size, 'record')}" %>
<% end %>

<% if @search.present? %>
  <ul>
  <% @search.results.each do |result| %>
    <%= "<li/>#{result[:full_name]}".html_safe %>
  <% end %>
  </ul>
<% end %>
