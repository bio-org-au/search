<% if @search.present? %>
<div id="search-tools-slider" class="<%= 'hidden' unless @search.present? %> hidden-print">
      <div class="bd-toc-item active">

        <ul class="nav bd-sidenav">
          <li class="">
            <%= link_to %(List &nbsp; #{fa_icon('check') if @search.parsed.show_list?}).html_safe,
                        plants_names_search_all_path(q: params['q'], pc: params[:controller], show_results_as: 'list'),
                        class: "tiny needs-details-limit",
                        title: "Re-run the search as a list." %>
          </li>
          <li class="">
            <%= link_to %(Details &nbsp; #{fa_icon('check') if @search.parsed.show_details?}).html_safe,
                        plants_names_search_all_path(q: params['q'], pc: params[:controller], show_results_as: 'details'),
                        class: "tiny needs-details-limit allow-field-alongside",
                        title: "Re-run the search showing details." %>
          </li>
          <hr/>
          <li>
            <a href="#"
               class="tiny show-all-details-link"
               title="Show all details">Show all details</a>
          </li>
          <li>
            <a href="#"
               class="tiny hide-all-details-link"
               title="Hide all details">Hide all details</a>
          </li>
          <hr/>
          <li>
            <a href="javascript:window.print()"
               class="tiny"
               title="Print the page">Print</a>
          </li>

          <% if @search.parsed.show_list? %>
            <li class="">
              <%= link_to "JSON",
                          plants_names_search_all_path(q: params['q'], pc: params[:controller], show_results_as: 'list', format: :json),
                          class: "tiny needs-details-limit",
                          title: "Convert results to JSON." %>
            </li>
            <li class="">
              <%= link_to "CSV",
                          plants_names_search_all_path(q: params['q'], pc: params[:controller], show_results_as: 'list', format: :csv),
                          class: "tiny needs-details-limit",
                          title: "Convert results to CSV." %>
            </li>
          <% end %>

        </ul>
        <%= render partial: "/layouts/search_nav_links" %>
  </div>
</div>
<% end %>

