<%= form_tag(plants_taxonomy_accepted_search_all_path, method: "get", id: "search-form") do %>
  <div class="form-group row">
    <%= label_tag(:q,
                  "Search for:",
                  class:"sr-only col-sm-2 form-control-label") %>
  <div class="col-sm-9">
    <%= text_field_tag(:q,
                       '',
                       class: "form-control",
                       value: "#{params[:q]}",
                       autofocus: true,
                       title: "Enter a name with or without wildcards to search APC or APNI",
                       placeholder: "Search all names") %>
    </div>
    <input type="hidden" 
           min="0"
           max="1000"
           step="1"
           value="<%= session[:default_details_limit] %>"
           name="details_limit"
           id="details-limit"
           class="">
  <%= link_to("Search APNI", plants_names_search_path(q: ""), id: "search-names-link", class: "alt-search-link btn btn-secondary hidden-print", title: "Search APNI") %>
  <%= submit_tag("Search APC", class: "btn btn-search hidden-print", title: "Search APC") %>
  </div>
<% end %>

<% if @search.present? %>
  <%= "<span class='search-result-summary'>#{pluralize(@search.results.size, 'accepted, excluded or synonym name')}</span>".html_safe %>
<% end %>
<br/>
<br/>

<% if @search.present? %>
  <%= render partial: "results", locals: {name: @search.results.first} %>
<% end %>
<span class="debug hidden-print tiny">[plants/taxonomy/accepted/search/all/_search]</span>
