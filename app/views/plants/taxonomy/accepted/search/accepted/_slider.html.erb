<% if @search.present? %>
<div id="search-tools-slider" class="<%= 'hidden' unless @search.present? %> hidden-print">
      <div class="bd-toc-item active">
        <ul class="nav bd-sidenav">
          <li class="">
            <%= link_to %(List &nbsp; #{fa_icon('check') if @search.parsed.show_list?}).html_safe,
                        plants_taxonomy_accepted_search_accepted_path(q: params['q'], show_results_as: "list", show_permalinks: params[:show_permalinks]),
                        class: "tiny needs-details-limit",
                        title: "Re-run the search as a list." %>
          </li>
          <li class="">
            <%= link_to %(Details &nbsp; #{fa_icon('check') if @search.parsed.show_details?}).html_safe,
                        plants_taxonomy_accepted_search_accepted_path(q: params['q'], show_results_as: "details", show_permalinks: params[:show_permalinks]),
                        class: "tiny needs-details-limit",
                        title: "Re-run the search showing details." %>
          </li>
          <hr/>
          <li class="">
            <%= link_to %(Citation links &nbsp; #{fa_icon('check') if @search.parsed.show_permalinks?}).html_safe,
                        plants_taxonomy_accepted_search_accepted_path(q: params['q'], show_results_as: params[:show_results_as], show_permalinks: params[:show_permalinks] != "true"),
                        class: "tiny",
                        title: "Add permalinks to the results." %>
          </li>
          <hr/>
          <li>
            <a href="javascript:window.print()"
               class="tiny"
               title="Print the page">Print</a>
          </li>
          <% if @search.parsed.show_list? %>
            <li class="">
              <%= link_to "JSON",
                          plants_taxonomy_accepted_search_accepted_path(q: params['q'], show_results_as: params[:show_results_as], format: :json),
                          class: "tiny needs-details-limit",
                          title: "Convert results to JSON." %>
            </li>
            <li class="">
              <%= link_to "CSV",
                          plants_taxonomy_accepted_search_accepted_path(q: params['q'], show_results_as: params[:show_results_as], format: :csv),
                          class: "tiny needs-details-limit",
                          title: "Convert results to CSV." %>
            </li>
          <% end %>
        </ul>
        <hr/>
        <a href="javascript:history.go(-1);"
           class="micro"
           title="Go back one page"><%= fa_stacked_icon "chevron-left inverse", base: "square" %></a>
        <a href="#top"
           class="micro"
           title="Go to the top of the page"><%= fa_stacked_icon "chevron-up inverse", base: "square" %></a>
        <a href="#footer"
           class="micro"
           title="Go to the bottom of the page"><%= fa_stacked_icon "chevron-down inverse", base: "square" %></a>
        <a href="javascript:history.go(1);"
           class="micro"
           title="Go forward one page"><%= fa_stacked_icon "chevron-right inverse", base: "square" %></a>
  </div>
  </div>
    <br/>
      <span class="debug tiny hidden-print">
        app/views/plants/taxonomy/accepted/search/accepted/_slider
      </span>
</div>
<% end %>

