<%= form_tag(taxonomy_accepted_search_path, method: "get", id: "search-form") do %>
  <div class="form-group row">
    <%= label_tag(:q,
                  "Search for:",
                  class:"sr-only col-sm-2 form-control-label") %>
  <div class="col-xs-10 col-sm-11 col-md-5 col-lg-7 col-xl-8">
    <%= text_field_tag(:q,
                       '',
                       name: "q",
                       class: "form-control",
                       value: "#{params[:q]}",
                       autofocus: true,
                       title: "Enter a name with or without wildcards to search #{ tree_label } or #{ name_label }",
                       required: true,
                       placeholder: "Search #{ tree_label }") %>
  </div>
  <div class="col-xs-8 col-xs-offset-4 col-sm-8 col-sm-offset-7 col-md-5 col-md-offset-0 col-lg-4 col-lg-offset-0 col-xl-3">
    <%= link_to("#{fa_icon('search')} #{ name_label }".html_safe,
                names_search_path(q:''),
                id: "search-names-link",
                class: "alt-search-link btn btn-secondary hidden-print",
                title: "Switch to #{ name_label } search") %>
              <%= button_tag(id: "search-button", type: "submit", class: "btn white nsl-blue-bg hidden-print", title: "Search #{ tree_label }")  do %>
                <%= fa_icon('search') %>&nbsp;<%= tree_label %>
    <% end %> 
  </div>
  </div>
    <input type="hidden" name="search_type" id="search-type" class="" value="<%= params[:search_type] || 'accepted' %>">
    <input type="hidden" name="format" id="search-format" class="" value="html">
<% end %>

<%= render "taxonomy/accepted/search/help_text" %>

<span class="debug hidden-print tiny">[taxonomy/accepted/search/_form]</span>

<script>
  window.addClearButton();
</script>
