<% if @load_details %>
$("#taxonomy-details-for-<%= params[:id] %>").append('<%= escape_javascript(render partial: "/taxonomy/accepted/search/accepted_name_details", locals: {instance: @instance, showing_details: true}) %>')
<% end %>
$("#taxonomy-details-for-<%= params[:id] %>").removeClass('hidden-xs-up');
$("#taxonomy-link-for-<%= params[:id] %>").html('<%=
      link_to(@instance.name.full_name,
              taxonomy_details_path(id: @instance.id, details_showing: true, details_loaded: true),
              class: "xfull-name xdrill-down-toggle xno-details",
              title: "Select to show or hide details", remote: true) %>');

